<UserControl x:Class="Carrot.UI.Controls.Font.FontComboBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:scm="clr-namespace:System.ComponentModel;assembly=WindowsBase"
        xmlns:local="clr-namespace:Carrot.UI.Controls.Font" mc:Ignorable="d" d:DesignHeight="450"
        d:DesignWidth="400" Loaded="FontComboBox_Loaded"
        DataContext="{Binding Mode=OneWay, RelativeSource={RelativeSource Self}}">
    <ComboBox x:Name="CBFonts" ItemsSource="{Binding AllFonts}"
            SelectedIndex="{Binding SelectedIndex}" ScrollViewer.VerticalScrollBarVisibility="Auto"
            Loaded="CBFonts_Loaded" DropDownClosed="CBFonts_DropDownClosed">
        <ComboBox.ItemTemplate>
            <DataTemplate>
                <StackPanel Orientation="Horizontal" Height="22">
                    <TextBlock Text="{Binding Name}" FontFamily="{Binding Font}" FontSize="14"
                            MinWidth="100" VerticalAlignment="Center" />
                </StackPanel>
            </DataTemplate>
        </ComboBox.ItemTemplate>
    </ComboBox>
</UserControl>
