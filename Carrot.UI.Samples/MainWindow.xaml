<Window x:Class="Carrot.UI.Samples.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Carrot.UI.Samples"
        xmlns:cui="clr-namespace:Carrot.UI.Controls.Picker;assembly=Carrot.UI.Controls"
        mc:Ignorable="d" Title="MainWindow" Height="450" Width="600">
    <StackPanel Orientation="Vertical">

        <cui:ColorComboBox x:Name="colorBox1" SelectedIndex="0" VerticalAlignment="Center"
                HorizontalAlignment="Center" ExtraColors="{Binding}"
                SelectedColorChanged="ColorBox_SelectedColorChanged" />

        <StackPanel Orientation="Horizontal">
            <Button x:Name="button" Click="Button_Click">Select Font</Button>
        </StackPanel>

    </StackPanel>
</Window>
